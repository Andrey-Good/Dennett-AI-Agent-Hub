# Model Manager Environment Configuration

# API Settings
AI_CORE_API_TOKEN=your-secure-api-token-here
API_HOST=0.0.0.0
API_PORT=8000

# Storage Settings
MODELS_DIR=./models
DOWNLOADS_DIR=./downloads
METADATA_FILE=models.json

# Download Settings
MAX_CONCURRENT_DOWNLOADS=3
DOWNLOAD_CHUNK_SIZE=8192
DOWNLOAD_TIMEOUT=300

# Hugging Face Settings (optional)
# HUGGINGFACE_TOKEN=your-hf-token-here
# HF_CACHE_DIR=./hf_cache

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
ENABLE_FILE_HASHING=true
CLEANUP_INTERVAL_HOURS=24
MAX_SEARCH_RESULTS=100

# Security
ENABLE_CORS=true
CORS_ORIGINS=["*"]
